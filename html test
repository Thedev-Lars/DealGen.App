<script>
  const $ = (q) => document.querySelector(q);
  const $$ = (q) => Array.from(document.querySelectorAll(q));

  // Router
  const pages = $$('[data-page]');
  const nav = $$('.navbtn');

  function goto(route){
    pages.forEach(p => p.style.display = (p.getAttribute('data-page') === route ? 'block' : 'none'));
    nav.forEach(n => n.classList.toggle('active', n.dataset.route === route));
    if (location.hash.slice(1) !== route) {
      history.replaceState({}, '', `#${route}`);
    }
  }

  // initial load
  let initial = location.hash?.slice(1);
  if (!initial || !pages.some(p => p.getAttribute('data-page') === initial)){
    initial = 'overview';
    location.hash = '#overview';
  }
  goto(initial);

  // attach click handlers
  nav.forEach(n => n.addEventListener('click', () => goto(n.dataset.route)));
</script>
